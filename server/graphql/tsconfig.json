{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["esnext", "dom"],
      "allowJs": true,
      "outDir": "dist",
      "isolatedModules": true,
      "pretty": true,
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "src",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": [
      "src"
    ]
  }
